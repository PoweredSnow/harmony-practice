<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:orientation="horizontal"
        ohos:top_margin="10vp">
    <Image
        ohos:id="$+id:image_photo"
        ohos:height="128vp"
        ohos:width="128vp"
        ohos:layout_alignment="center"
        ohos:start_margin="10vp"
        ohos:image_src="$media:intro1"/>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:orientation="vertical">

        <Text
            ohos:id="$+id:text_number_name"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:text_size="20fp"
            ohos:top_margin="10vp"
            ohos:bottom_margin="5vp"
            ohos:start_margin="20vp"
            ohos:text="test"/>

        <Text
            ohos:id="$+id:text_price"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:text_size="20fp"
            ohos:bottom_margin="5vp"
            ohos:start_margin="20vp"
            ohos:text="test"
            ohos:text_color="red"/>
        <Text
            ohos:id="$+id:text_introduce"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:text_size="20fp"
            ohos:bottom_margin="5vp"
            ohos:start_margin="20vp"
            ohos:text="test"
            ohos:multiple_lines="true"/>
    </DirectionalLayout>

    </DirectionalLayout>

</DirectionalLayout>
